.wrapper
  position fixed
  top 0
  right 0
  width 100vw
  height 100vh
  background-color #bdc3c7

.video
  width 100%

.controls
  position absolute
  bottom 5px
  left 0
  right 0
  display flex
  justify-content space-between

.trigger-button
  background-color #ecf0f1
  width 50px
  height 50px
  border-radius 50%
  color #2c3e50
  border none
  box-shadow 0 14px 28px rgba(0,0,0,0.25), 0 10px 10px rgba(0,0,0,0.22)

.canvas
  display none
    
